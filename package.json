{
  "name": "joplin-vscode-plugin",
  "displayName": "joplin-vscode-plugin",
  "description": "joplin 的 vscode 集成",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:joplin-note"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "joplin-note",
          "title": "Joplin",
          "icon": "src/assets/dep.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "joplin-note",
        "contents": "还未配置 token 与端口，请首先进行配置"
      }
    ],
    "views": {
      "joplin-note": [
        {
          "id": "joplin-note",
          "name": "Note List"
        }
      ]
    },
    "commands": [
      {
        "command": "joplinNote.refreshNoteList",
        "title": "Refresh",
        "icon": {
          "light": "src/assets/resources/light/refresh.svg",
          "dark": "src/assets/resources/dark/refresh.svg"
        }
      },
      {
        "command": "joplinNote.createFolder",
        "title": "Add Folder"
      },
      {
        "command": "joplinNote.createNote",
        "title": "Add Note"
      },
      {
        "command": "joplinNote.rename",
        "title": "Rename",
        "icon": {
          "light": "src/assets/resources/light/edit.svg",
          "dark": "src/assets/resources/dark/edit.svg"
        }
      },
      {
        "command": "joplinNote.remove",
        "title": "Remove"
      },
      {
        "command": "joplinNote.search",
        "title": "Search",
        "icon": "src/assets/resources/dark/search.svg"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "joplinNote.refreshNoteList",
          "when": "view == joplin-note",
          "group": "navigation"
        },
        {
          "command": "joplinNote.createFolder",
          "when": "view == joplin-note",
          "group": "navigation"
        },
        {
          "command": "joplinNote.search",
          "when": "view == joplin-note",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "joplinNote.createFolder",
          "when": "view == joplin-note && viewItem == joplinNote.folder"
        },
        {
          "command": "joplinNote.createNote",
          "when": "view == joplin-note && viewItem == joplinNote.folder"
        },
        {
          "command": "joplinNote.rename",
          "when": "view == joplin-note"
        },
        {
          "command": "joplinNote.remove",
          "when": "view == joplin-note"
        }
      ]
    },
    "configuration": {
      "title": "joplin",
      "properties": {
        "joplin.token": {
          "type": "string",
          "description": "joplin web server token"
        },
        "joplin.programPath": {
          "type": "string",
          "description": "joplin program install path"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "joplin-api": "^0.1.4"
  }
}
