{
  "name": "joplin-utils",
  "private": true,
  "license": "MIT",
  "scripts": {
    "postinstall": "npx simple-git-hooks",
    "setup": "yarn && yarn runstream setup && yarn",
    "clean": "lerna clean -y && lerna exec -- rimraf dist && rimraf node_modules",
    "runstream": "lerna run --include-dependencies --stream",
    "build": "yarn runstream build",
    "docs:deploy": "gh-pages -d docs"
  },
  "prettier": "@liuli-util/prettier-standard-config",
  "workspaces": {
    "packages": [
      "libs/*",
      "apps/*",
      "examples/*"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@liuli-util/prettier-standard-config": "^0.1.0",
    "gh-pages": "^3.1.0",
    "lint-staged": "^11.0.1",
    "patch-package": "^6.4.7",
    "prettier": "^2.3.2",
    "simple-git-hooks": "^2.5.1",
    "type-fest": "^1.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "commit-msg": "yarn commitlint --edit $1"
  }
}
