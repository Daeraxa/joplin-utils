{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2017",
      "esnext.array",
      "es2015.iterable"
    ],
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    //定义类型定义文件的根目录
    "esModuleInterop": true,
    // 引入辅助函数集
    "importHelpers": true,
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}
